<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddMealActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Ajouter un met au menu"
        app:layout_constraintTop_toTopOf="parent"
  />

    <Button
        android:id="@+id/AddToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/style_my_buttons"
        android:onClick="onAcceptButtonClicked"
        android:text="Ajouter"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="426dp" />

    <Button
        android:id="@+id/BackToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/style_my_buttons"
        android:onClick="onCancelButtonClicked"
        android:text="Annuler"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="426dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du produit a ajouter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp" />

    <EditText
        android:id="@+id/priceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prix du produit a ajouter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="289dp" />


</RelativeLayout>